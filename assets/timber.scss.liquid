  font-size: 1.6rem;
  color: $colorTextGrey;
  font-style: italic;
  margin: 0 0 $gutter;
  padding: $gutter/2 $gutter;
  border-left: 1px solid $borderColor;

  p {
    margin-bottom: 0;

    & + cite {
      margin-top: $gutter/2;
    }
  }

  cite {
    display: block;
    font-size: 1.4rem;
    color: $colorTextGrey;

    &:before {
      content: "\2014 \0020";
    }
  }
}

