  clear: both;
  border-top: solid $borderColor;
  border-width: 1px 0 0;
  margin: $gutter*2 0;

  &.hr--small {
    margin: $gutter 0;
  }

  &.hr--clear {
    border-top: 0 none;
  }
}

/*================ Section Headers ================*/
.section-header {
  margin-bottom: $gutter/2;
}

@include at-query ($min, $large) {
  .section-header {
    display: table;
    width: 100%;
  }

  .section-header--left {
    display: table-cell;
    vertical-align: middle;
    margin-bottom: 0;

    h1, h2, h3, h4,
    .h1, .h2, .h3, .h4 {
      margin-bottom: 0;
    }
  }

  .section-header--right {
    display: table-cell;
    vertical-align: middle;
    text-align: right;
    width: 325px;

    @include at-query ($max, $medium) {
      margin-bottom: $gutter;
    }
  }
}

.section-header--right {
  @include at-query ($max, $medium) {
    margin-top: -0.4em; // don't exceed h1 margin-bottom
  }

  .form-horizontal,
  .collection-view {
    display: inline-block;
    vertical-align: middle;
  }

  @include at-query ($min, $postSmall) {
    label + select,
    .collection-view {
      margin-left: $gutter/2;
    }
  }
}

.collection-view {
  display: inline-block;
  border: 1px solid $borderColor;
  border-radius: $radius;
  padding: 11px;
  height: 37px; // same as form elements

  /*================ We use SVG icons, so simply hide this in oldIE ================*/
  .lt-ie9 & {
    display: none;
  }

  /*================ Only show on larger screens ================*/
  @include at-query ($min, $large) {
    display: inline-block;
  }

  a {
    display: block;
    float: left;
    opacity: 0.7;
    cursor: pointer;

    & + a {
      margin-left: 10px;
    }

    &.collection-view--active {
      opacity: 1;
      cursor: default;
    }
  }

  img {
    display: block;
    opacity: inherit;
  }
}

