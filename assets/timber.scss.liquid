/*============================================================================
  #Breakpoint and Grid Variables
==============================================================================*/

$siteWidth: 1180px;
$gutter: 24px;
$gridGutter: 24px; // can be a %, but nested grids will have smaller margins because of it

$viewportIncrement: 1px;

$small: 480px;
$medium: 768px;
$large: 769px;

$postSmall: $small + $viewportIncrement;
$preMedium: $medium - $viewportIncrement;
$preLarge: $large - $viewportIncrement;

$breakpoints: (
  'small' '(max-width: #{$small})',
  'medium' '(min-width: #{$postSmall}) and (max-width: #{$medium})',
  'medium-down' '(max-width: #{$medium})',
  'large' '(min-width: #{$large})'
);
$breakpoint-has-widths: ('small', 'medium', 'medium-down', 'large');
$breakpoint-has-push:  ('medium', 'medium-down', 'large');
$breakpoint-has-pull:  ('medium', 'medium-down', 'large');

/*============================================================================
  Dependency-free breakpoint mixin - http://bit.ly/1xuMHv3
==============================================================================*/

$min: min-width;
$max: max-width;

@mixin at-query($constraint, $viewport1, $viewport2:null) {
  @if $constraint == $min {
    @media screen and ($min: $viewport1) {
      @content;
    }
  } @else if $constraint == $max {
    @media screen and ($max: $viewport1) {
      @content;
    }
  } @else {
    @media screen and ($min: $viewport1) and ($max: $viewport2) {
      @content;
    }
  }
}

/*============================================================================
  #Grid Setup
==============================================================================*/

.grid,
.grid-uniform {
  @extend %clearfix;
}

.grid-item.clear {
  clear: both;
}

@mixin grid-media-query($media-query) {
  $breakpoint-found: false;

  @each $breakpoint in $breakpoints {
    $name: nth($breakpoint, 1);
    $declaration: nth($breakpoint, 2);

    @if $media-query == $name and $declaration {
      $breakpoint-found: true;

      @media only screen and #{$declaration} {
        @content;
      }
    }
  }

  @if $breakpoint-found == false {
    @warn "Breakpoint '#{$media-query}' does not exist";
  }
}

/*============================================================================
  #Grid
==============================================================================*/

.grid,
.grid-uniform {
  list-style:none;
  margin:0;
  padding:0;
  margin-left: -$gridGutter;
}
.grid-item {
  float: left;
  padding-left: $gridGutter;
  vertical-align: top;
  width: 100%;
  @include vendor-prefix(box-sizing, border-box);
}
.grid-uniform {
  font-size: 0;

  > .grid-item {
    float: none;
    display: inline-block;
    white-space: normal;
    font-size: 1.4rem;
  }
}

.grid--rev { /* Reverse the order of columns */
  @extend .grid;
  direction: rtl;
  text-align: left;

  > .grid-item {
    direction: ltr;
    text-align: left;
    float: right;
  }
}

.grid--full { /* Gutterless grids have all the properties of regular grids, minus any spacing. */
  @extend .grid;
  margin-left: 0;

  > .grid-item {
    padding-left: 0;
  }
}

.grid--right { /* Align the entire grid to the right. */
  @extend .grid;
  direction: rtl;
  text-align: right;

  > .grid-item {
    direction: ltr;
    float: right;
    text-align: left;
  }
}

/*================= Grid columns ==================*/

@mixin device-type($namespace:"") {
  .#{$namespace}one-whole       { width:100%; }

  .#{$namespace}one-half        { width:50%; }

  .#{$namespace}one-third       { width:33.333%; }
  .#{$namespace}two-thirds      { width:66.666%; }

  .#{$namespace}one-quarter     { width:25%; }
  .#{$namespace}two-quarters    { @extend .#{$namespace}one-half; }
  .#{$namespace}three-quarters  { width:75%; }

  .#{$namespace}one-fifth       { width:20%; }
  .#{$namespace}two-fifths      { width:40%; }
  .#{$namespace}three-fifths    { width:60%; }
  .#{$namespace}four-fifths     { width:80%; }

  .#{$namespace}one-sixth       { width:16.666%; }
  .#{$namespace}two-sixths      { @extend .#{$namespace}one-third; }
  .#{$namespace}three-sixths    { @extend .#{$namespace}one-half; }
  .#{$namespace}four-sixths     { @extend .#{$namespace}two-thirds; }
  .#{$namespace}five-sixths     { width:83.333%; }

  .#{$namespace}one-eighth      { width:12.5%; }
  .#{$namespace}two-eighths     { @extend .#{$namespace}one-quarter; }
  .#{$namespace}three-eighths   { width:37.5%; }
  .#{$namespace}four-eighths    { @extend .#{$namespace}one-half; }
